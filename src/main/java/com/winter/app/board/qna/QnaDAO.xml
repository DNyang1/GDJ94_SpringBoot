<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winter.app.board.qna.QnaDAO">
	<select id="list" resultType="QnaDTO" parameterType="Pager">
		SELECT *
		FROM qna
		ORDER BY board_ref DESC, board_step ASC;
	</select>

	<insert id="add" parameterType="QnaDTO" useGeneratedKeys="true"
		keyProperty="boardNum">
		INSERT INTO qna VALUES(null, #{boardTitle},
		#{boardWriter},
		#{boardContents}, now(), 0, 0, 0, 0)
	</insert>
	<update id="refUpdate" parameterType="QnaDTO">
		UPDATE qna SET
		board_ref=#{boardNum} WHERE board_num=#{boardNum}
	</update>

	<select id="countList">
		SELECT count(*) FROM qna;
	</select>

	<select id="detail" resultType="QnaDTO" parameterType="QnaDTO">
		SELECT *
		FROM qna WHERE board_num=#{boardNum}
	</select>

	<update id="stepUpdate" parameterType="QnaDTO">
		UPDATE qna SET board_step
		= board_step + 1
		WHERE board_ref = #{boardRef} AND board_step >
		#{boardStep}
	</update>
	<insert id="reply" parameterType="QnaDTO">
		INSERT INTO qna VALUES (null,
		#{boardTitle}, #{boardWriter}, #{boardContents}, now(), 0,
		#{boardRef}, #{boardStep}, #{boardDepth})
	</insert>
	
	<update id="update" parameterType="QnaDTO">
		UPDATE qna SET
		board_title = #{boardTitle},
		board_writer = #{boardWriter},
		board_contents = #{boardContents}
		WHERE board_num = #{boardNum}
	</update>

	<delete id="delete" parameterType="QnaDTO">
		DELETE FROM qna WHERE board_num = #{boardNum}
	</delete>
</mapper>